<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/resetButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset Trials" />

                <RadioButton
                    android:id="@+id/stopButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Stop Motion" />
            </RadioGroup>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/khizar"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="500dp"
                android:text="Khzr"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/Usman"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:text="Usmn"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/Adyaan"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:text="Adyan"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/Armaan"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="205dp"
                android:text="Armn"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/Essa"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:text="Esa"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/Arham"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="330dp"
                android:text="Ar"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:text="Hello" />

        <Button
            android:id="@+id/btnHow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How Are You"
            tools:ignore="HardcodedText" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:id="@+id/act_time"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn Around" />

            <TextView
                android:id="@+id/turnAround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trial"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="clip_horizontal|bottom"
                android:text="Forward" />

            <TextView
                android:id="@+id/tRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trial"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backward" />

            <TextView
                android:id="@+id/tLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trial"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btngo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Back" />

            <TextView
                android:id="@+id/goTrial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trial"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btngjob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Job" />

            <TextView
                android:id="@+id/goodJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trial"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish" />

            <TextView
                android:id="@+id/finishTrial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trial"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BYE Bye" />

            <TextView
                android:id="@+id/byeTrial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trial"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>